<!DOCTYPE html>
<html lang="en">

<head>
  <title>Iphone Accessories</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

  <!-- Bootstrap CSS & JS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" crossorigin="anonymous">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>

  <script>
    function submitForm() {
      var formElements = document.getElementById("subscriptionForm").elements;
      // Create a user object from the form
      var user = {
        firstName: formElements["fname"].value,
        lastName: formElements["lname"].value,
        email: formElements["Email"].value,
        password: formElements["password"].value,
        birthDate: formElements["DateOfBirth"].value
      };
      // Log the form fields and values
      Array.from(formElements).forEach(element => console.log(`${element.name}: ${element.value}`));
      // Validate email
      if (user.email.includes("@")) {
        console.log("Email is valid");
      } else {
        console.log("Invalid email");
      }
      // Validate password (checking for special characters)
      if (user.password.includes("!") || user.password.includes("?")) {
        console.log("Password is valid");
      } else {
        console.log("Invalid password");
      }
      console.log("Thank you for registering!"");
    }
  </script>
</head>

<body>
  <form id="subscriptionForm">
    First Name: <input type="text" name="fname" value="Adel"><br>
    Last Name: <input type="text" name="lname" value="Morad"><br>
    Email: <input type="text" name="Email" value="Enter Email"><br>
    Password: <input type="text" name="password" value="Enter Password"><br>
    Date of Birth: <input type="date" name="DateOfBirth" value="Enter Date of Birth"><br>
  </form>

  <button onclick="submitForm()">Submit</button>
  <p>Click submit to register.</p>
</body>

